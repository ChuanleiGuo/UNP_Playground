    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "daytimetcpcli",
            "type": "shell",
            "command": "clang",
            "args": [
                "-I./lib",
                "-g",
                "-Wall",
                "-Werror",
                "-std=c99",
                "ch1_intro/daytimetcpcli.c", // filename
                "-o",
                "ch1_intro/daytimetcpcli.out",
                "./libunp.a",
                "-lresolv",
                "-lpthread"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
